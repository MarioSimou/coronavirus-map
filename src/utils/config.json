{
  "basemap": {
    "attribution":"Tiles &copy; Esri &mdash; National Geographic, Esri, DeLorme",
    "url":"https://server.arcgisonline.com/ArcGIS/rest/services/NatGeo_World_Map/MapServer/tile/{z}/{y}/{x}",
    "maxZoom": 6,
    "minZoom": 2
  },
  "countriesEndpoint": "https://corona.lmao.ninja/countries",
  "map": {
    "viewport": {
      "center": [0,0],
      "zoom": 2
    },
    "duration": 2,
    "easeLinearity": 0.25,
    "animate": true,
    "maxBounds": [
      [-90, -90],
      [90,90]
     ],
     "dragging": true,
     "touchZoom": true,
     "keyboard": false
  },
  "circleMarker": {
    "style": {
      "highlight": {
        "weight": 2,
        "color": "#fff",
        "dashArray": 5,
        "fillOpacity": 0.7,
        "stroke": true
      },
      "default": {
        "weight": 1,
        "opacity": 1,
        "color": "white",
        "dashArray": 2,
        "fillOpacity": 0.7,
        "stroke": true
      }
    }
  },
  "legends": [
    [
      {"color": "#67000d", "value": 1000 },
      {"color": "#9b0c13", "value": 500},
      {"color": "#ba1419", "value": 200},
      {"color": "#d42020", "value": 100},
      {"color": "#eb362a", "value": 50},
      {"color": "#f6533b", "value": 20},
      {"color": "#fc7050", "value": 0}
    ]
  ]
}